<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SupportActivity"
    android:background="@drawable/profilebackground"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/back"
            android:gravity="center"
            android:drawablePadding="10dp"
            app:drawableTint="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:background="@drawable/background_profile_logo"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/picuser"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/signup_logo" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


        <TextView
            android:id="@+id/contactus"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/background_profile_logo"
            android:text="Contact Us At"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/et_text_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText1"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:gravity="center"
                android:text="Call :"
                android:textAlignment="center"
                android:textColor="@color/golden"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCall"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:ems="10"
                android:gravity="center"
                android:text="0321858131"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/et_text_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText2"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:gravity="center"
                android:text="Email :"
                android:textAlignment="center"
                android:textColor="@color/golden"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:ems="10"
                android:gravity="center"
                android:text="eat&amp;bitesupport@hotmail"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/et_text_background"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/editText"
                android:layout_width="95dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:gravity="center"
                android:text="Message :"
                android:textAlignment="center"
                android:textColor="@color/golden"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:ems="10"
                android:gravity="center"
                android:text="03334586131"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">


        <ImageView
            android:id="@+id/CallBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/orange_btn"
            app:srcCompat="@drawable/telephone"

            app:tint="@color/white" />
        <ImageView
            android:id="@+id/MessageBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/orange_btn"
            app:srcCompat="@drawable/chat"
            app:tint="@color/white" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>