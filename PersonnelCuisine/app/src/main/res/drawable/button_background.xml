<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Background tint set to black -->
            <stroke
                android:width="8dp"
                android:color="@color/orange" /> <!-- Border color set to darkgolden with 2dp width -->
            <corners android:radius="10dp" /> <!-- Border radius set to 50dp -->
        </shape>
    </item>
</layer-list>
