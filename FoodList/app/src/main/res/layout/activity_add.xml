<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    android:background="@drawable/mainbackground"
    android:padding="10dp">



    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="230dp"
        android:layout_height="220dp"
        android:background="@drawable/background_splash_logo"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pic_add"
            android:layout_width="210dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/defaultimage" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/linearLayout3"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_splash_logo"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/btnAddImage"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/black"
            android:text="Add Image"
            android:textColor="@color/lightgolden"
            android:textSize="20dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        android:gravity="center">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="text"
            android:hint="Enter Food Name"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/et_text_background" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="number"
            android:hint="Enter Food Price"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/et_text_background" />


        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="text"
            android:hint="Enter Location"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/et_text_background" />

        <EditText
            android:id="@+id/etNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="text"
            android:hint="Enter Number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/et_text_background" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="text"
            android:hint="Enter Description"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/et_text_background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/darkgolden"
                android:text="Add Item"
                android:textColor="@color/white"
                android:textSize="20dp"

                />
            <Button
                android:id="@+id/btnRec"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/darkgolden"
                android:text="Goto Recycle"
                android:textColor="@color/white"
                android:textSize="20dp"

                />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>